file='command.txt'

case "$1" in
"stack")
  path=$(eval 'pwd')
  command="cd "$path
  command+=" && "
  command+=" "${@:2}
  echo $command >> $file;;
"pop")
  cat $file | while read LINE; do

      if ! [ -z "$2" ]
        then
          if [ $2 == "show" ];then
           eval echo $LINE
          fi;
        else
          OUTPUT=$(eval $LINE)
      fi
  done
  cat /dev/null > $file ;

  ;;
esac